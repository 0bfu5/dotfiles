#!/bin/sh
# Prints the current volume or ðŸ”‡ if muted.
vol="$(mixer -o | perl -ne '/vol.volume/ and print ' | perl -F: -lane 'print @F[1]' | perl -pe 's/0\.//g'  )"
mute="$(mixer -o | perl -ne '/vol.mute/ and print' | perl -F= -lane 'print @F[1]')"
# If muted, print ðŸ”‡ and exit.
[ "$mute" == "on" ] && echo ðŸ”‡ && exit

case 1 in
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) echo ðŸ”‡ && exit ;;
esac

echo "$icon $vol%"
